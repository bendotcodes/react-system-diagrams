{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "declaration": true,
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".eslintrc.cjs",
    ".storybook/*.ts",
    ".storybook/preview.tsx"
  ],
  "exclude": ["node_modules", "dist", "storybook-static"]
}
